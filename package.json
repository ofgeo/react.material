{
  "private": true,
  "description": "React Material Components Web",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ofgeo/react.material.git"
  },
  "scripts": {
    "build": "cross-env BABEL_ENV=development webpack --progress --colors",
    "build:min": "cross-env BABEL_ENV=production webpack -p --progress --colors",
    "bootstrap": "yarn && lerna bootstrap",
    "clean": "del-cli packages/*/dist",
    "dist": "yarn clean && yarn build && yarn build:min",
    "start:web": "yarn bootstrap && lerna run --scope web start",
    "prepublish": "yarn dist"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-react-app": "3.1.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "del-cli": "^1.1.0",
    "lerna": "^2.5.1",
    "webpack": "^3.8.1"
  },
  "workspaces": [
    "packages/*",
    "web",
    "app"
  ],
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "dependencies": {
    "immutable": "^3.8.2",
    "prop-types": "^15.6.0",
    "react": "^16.1.0",
    "react-dom": "^16.1.0"
  }
}
